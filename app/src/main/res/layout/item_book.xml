<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/ivBookCover"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:transitionName="cover"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fzyh_bold"
        android:text="Book Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:transitionName="title"
        app:layout_constraintLeft_toRightOf="@id/ivBookCover"
        app:layout_constraintTop_toTopOf="@id/ivBookCover" />

    <TextView
        android:id="@+id/tvLatestChapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fzyh_regular"
        android:text="Latest Chapter"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/ivBookCover"
        app:layout_constraintTop_toBottomOf="@id/tvBookTitle" />

    <TextView
        android:id="@+id/tvLastUpdated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Updated Time"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/ivBookCover"
        app:layout_constraintTop_toBottomOf="@id/tvLatestChapter" />

</android.support.constraint.ConstraintLayout>